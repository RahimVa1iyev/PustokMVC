@using PustokMVC.ModelView

@model MemberProfileUpdateVM
<div class="tab-pane fade" id="account-info" role="tabpanel">

</div>

    <div class="myaccount-content">
        <h3>Account Details</h3>
        <div class="account-details-form">
            <form action="memberupdate" method="post">
                <div class="row">
                    <div class="col-lg-6 col-12  mb--30">
                        <label asp-for="FullName" >FullName</label>
                        <input asp-for="FullName">
                        <span asp-validation-for="FullName" ></span>
                    </div>
                      <div class="col-lg-6 col-12  mb--30">
                        <label asp-for="UserName" >UserName</label>
                        <input asp-for="UserName">
                        <span asp-validation-for="UserName" ></span>
                    </div>
                    <div class="col-lg-6 col-12  mb--30">
                        <label asp-for="Email" >Email</label>
                        <input asp-for="Email">
                        <span asp-validation-for="Email" ></span>
                    </div>
                     <div class="col-lg-6 col-12  mb--30">
                        <label asp-for="PhoneNumber" >PhoneNumber</label>
                        <input asp-for="PhoneNumber">
                        <span asp-validation-for="PhoneNumber" ></span>
                    </div>
                    <div class="col-lg-6 col-12  mb--30">
                        <label asp-for="CurrentPassword" >CurrentPassword</label>
                        <input asp-for="CurrentPassword">
                        <span asp-validation-for="CurrentPassword" ></span>
                    </div>
                     <div class="col-lg-6 col-12  mb--30">
                        <label asp-for="NewPassword" >NewPassword</label>
                        <input asp-for="NewPassword">
                        <span asp-validation-for="NewPassword" ></span>
                    </div>
                    <div class="col-lg-6 col-12  mb--30">
                        <label asp-for="ConfirmedPassword" >ConfirmedPassword</label>
                        <input asp-for="ConfirmedPassword">
                        <span asp-validation-for="ConfirmedPassword" ></span>
                    </div>
                    <div class="col-lg-6 col-12  mb--30">
                       <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn--primary">Save Changes</button>
                    </div>
                </div>
            </form>
        </div>
    </div>