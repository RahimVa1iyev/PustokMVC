@using PustokMVC.ModelView
@model MemberLoginVM

<div class="col-sm-12 col-md-12 col-lg-6 col-xs-12">
    <form asp-action="login" method="post" >
        <div class="login-form">
            <h4 class="login-title">Returning Customer</h4>
            <p><span class="font-weight-bold">I am a returning customer</span></p>
            <div class="row">
                <div class="col-12 mb--20">
                    <label asp-for="UserName">UserName</label>
                    <input class="mb-0 form-control" asp-for="UserName">
                    <span class="text-danger" asp-validation-for="UserName"></span>
                </div>
                <div class="col-12 mb--20">
                    <label asp-for="Password">FullName</label>
                    <input class="mb-0 form-control" asp-for="Password">
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                <div class="col-md-12">
                    <button type="submit" class="btn btn-outlined">Login</button>
                </div>
            </div>
        </div>
    </form>
</div>

