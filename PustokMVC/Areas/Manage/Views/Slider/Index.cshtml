

@using PustokMVC.Models

@model List<Slider>
@{
    var count = 0;
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="d-flex align-items-center justify-content-between ">
                <h1 >Sliders</h1>  
                <a class="btn btn-success " asp-action="create" > Create</a>
            </div>
        </div>
        <div class="col-md-8">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">FTitle</th>
                        <th scope="col">STitle</th>
                        <th scope="col">ButtonText</th>

                        <th scope="col">Image</th>

                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td>@item.FirstTitle</td>
                            <td>@item.SecondTitle</td>
                            <td>@item.ButtonText</td>


                            <td><img width="150" src="~/image/bg-images/@item.Image" /></td>

                            <td>   
                                <a class="btn btn-warning">Edit </a>
                                <a class="btn btn-danger">Delete</a>

                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

